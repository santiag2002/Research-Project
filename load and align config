// nextflow.config

// Parameter definitions
params {
    project_dir = "$SCRATCH/Research_Project/Pipeline_dev"
    accessions = "${params.project_dir}/accessions.csv"
    outdir = "${params.project_dir}/results"
    genome = "${params.project_dir}/reference_genome.fa"
    genome_index_dir = "${params.project_dir}/genome_index"
    genome_index_base = "genome_index"
    temp_fastq = "${params.outdir}/temp_fastq"

    // Variant calling parameters
    min_coverage = 5
    max_coverage = 100
    min_mapping_quality = 20
    min_base_quality = 20
    max_missing = 0.1
    maf = 0.025

    // General resources
    max_memory = 16.GB
    max_cpus = 4
    max_time = 24.h
}

// Profiles
profiles {
    modules {
        // Use modules instead of containers
        process.module = true
    }
    test {
        process.cpus = 2
        process.memory = '8 GB'
        process.time = '1h'
    }
}

// Process configurations
process {
    executor = 'slurm'
    clusterOptions = '--account=def-mcfarlas'

    withName: FETCHNGS {
        cpus = 1
        memory = '4 GB'
        time = '2h'
        module = 'StdEnv/2023:sra-toolkit/3.0.9'
    }

    withName: ALIGN_AND_SORT {
        cpus = 4
        memory = '16 GB'
        time = '20h'
        module = 'StdEnv/2023:bowtie2/2.5.4:samtools/1.22.1'  // ← REPLACED CONTAINER
    }

    withName: SAMTOOLS_DEPTH {
        cpus = 2
        memory = '4 GB'
        time = '2h'
        module = 'StdEnv/2023:samtools/1.22.1'  // ← REPLACED CONTAINER
    }

    withName: BCFTOOLS_MPILEUP {
        cpus = 8
        memory = '32 GB'
        time = '12h'
        module = 'StdEnv/2023:bcftools/1.22'  // ← REPLACED CONTAINER
    }

    withName: FILTER_VARIANTS {
        cpus = 4
        memory = '16 GB'
        time = '4h'
        module = 'StdEnv/2023:bcftools/1.22'  // ← REPLACED CONTAINER
    }

    withName: VARIANT_STATS {
        cpus = 2
        memory = '8 GB'
        time = '2h'
        module = 'StdEnv/2023:bcftools/1.22'  // ← REPLACED CONTAINER
    }
}

// Executor configurations
executor {
    queueSize = 100
    submitRateLimit = '10 sec'

    $slurm {
        queueSize = 50
    }
}

// REMOVED APPTAINER CONFIGURATIONS (not needed for modules)

// Reporting configurations
timeline {
    enabled = true
    file = "${params.outdir}/execution_timeline.html"
}

report {
    enabled = true
    file = "${params.outdir}/execution_report.html"
}

trace {
    enabled = true
    file = "${params.outdir}/execution_trace.txt"
    fields = 'task_id,hash,native_id,process,tag,name,status,exit,module,container,cpus,time,disk,memory,attempt,submit,start,complete,duration,realtime,queue,%cpu,%mem,rss,vmem,peak_rss,peak_vmem'
}

// Error strategy
process.errorStrategy = { task.attempt <= 3 ? 'retry' : 'finish' }
process.maxRetries = 3
process.maxErrors = -1
